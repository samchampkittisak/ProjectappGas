<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.a5835512034.projectappgas.PassActivity">

    <TextView
        android:id="@+id/setuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER : "
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/chkemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please!! check password at email"
        android:textSize="15sp"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@+id/setuser"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Login"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="blogin"/>
</android.support.constraint.ConstraintLayout>
